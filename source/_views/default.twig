<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">

        <title>{% block title %} {% if page.title %} {{ page.title }} &raquo; {% endif %} {% endblock %} {{ site.title }}</title>

        {% include "meta_tags.twig" %}

        <link href='http://fonts.googleapis.com/css?family=Roboto:500,100,300,700,400' rel='stylesheet' type='text/css'>
        <link href="{{ site.url }}/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
        <link href="{{ site.url }}/assets/vendor/prism/prism.css" rel="stylesheet">
        <link href="{{ site.url }}/assets/main.css" rel="stylesheet">
    </head>
    <body>
        {% include "header.twig" %}

        {% include "about.twig" %}

        <div class="middle-wrapper">
            {% include 'sidebar.twig' %}

            <div id="content">
                {% block content_wrapper %}{% block content %}{% endblock %}{% endblock %}
            </div>
        </div>

        <script src="{{ site.url }}/assets/vendor/jquery/jquery-2.1.3.min.js"></script>
        <script src="{{ site.url }}/assets/vendor/prism/prism.js"></script>
        <script src="{{ site.url }}/assets/js/main.js"></script>
        {% include 'google-analytics.twig' %}
    </body>
</html>